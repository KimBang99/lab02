@model lab02.Models.books
@{
    ViewBag.Title = "edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="padding-left: 80px" class="text">Edit Book</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    <table>
        <tr>
            <td>
                Name:
            </td>
            <td>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placehodler = "Name" })
            </td>
        </tr>
        <tr>
            <td>
                Author:
            </td>
            <td>
                @Html.TextBoxFor(model => model.Author, new { @class = "form-control", placehodler = "Author" })
            </td>
        </tr>
        <tr>
            <td>
                Image:
            </td>
            <td>
                @Html.TextBoxFor(model => model.Image, new { @class = "form-control", placehodler = "Image" })
            </td>
        </tr>
        <tr style="text-align: center; padding-top: 20px">
            <td colspan="2">
                <input type="submit" value="Save" class="btn btn-danger" />
            </td>
        </tr>
    </table>
}
<p></p>
<div>
    <a href="/getbook/booksModel">Back to list</a>
</div>

